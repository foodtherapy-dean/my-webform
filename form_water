  <script>
    // ì˜¬ë°”ë¥¸ êµ¬ì¡°ë¡œ ë³€ê²½
    const structure = {
      "ê²€ì¹¨ê¸°ìˆ˜ì¹˜": ["1í˜¸ê¸°", "2í˜¸ê¸°", "3í˜¸ê¸°"]
    };

    const container = document.getElementById("sections");

    // ì…ë ¥ í•„ë“œ ìƒì„±
    for (const [category, subs] of Object.entries(structure)) {
      const section = document.createElement("div");
      section.className = "entry";
      section.dataset.category = category;
      section.innerHTML = `<h2>${category}</h2>`;
      subs.forEach(sub => {
        section.innerHTML += `<label>${sub}: <input type="number" data-sub="${sub}" min="0" value="0"></label>`;
      });
      container.appendChild(section);
    }

    // ì „ì†¡ ì´ë²¤íŠ¸
    document.getElementById("trapForm").addEventListener("submit", async function(e) {
      e.preventDefault();

      const date = document.getElementById("date").value;
      const sections = document.querySelectorAll(".entry");

      const entries = [];
      sections.forEach(div => {
        const category = div.dataset.category;
        div.querySelectorAll("input").forEach(input => {
          const subcategory = input.dataset.sub;
          const value = parseInt(input.value) || 0;
          entries.push({ category, subcategory, value });
        });
      });

      // group ê°’ì€ í•„ìš”ì‹œ ì‚¬ìš©ì ì •ì˜, ì„ì‹œë¡œ ë¹„ì›Œë‘ 
      const group = "";

      const data = { date, group, entries };

      const formData = new FormData();
      formData.append("data", JSON.stringify(data));

      try {
        const response = await fetch("https://script.google.com/macros/s/AKfycbwX0kZA3NAUl8p9fy9pOSqcfvMq8Z9VAf0dVE_4v1MXkwnreqQKiCldTgVgLAXpdP8Agg/exec", {
          method: "POST",
          body: formData
        });

        const result = await response.text();
        alert("âœ… Google Sheetì— ì €ì¥ ì™„ë£Œ!\n\n" + result);
      } catch (err) {
        alert("âŒ ì „ì†¡ ì¤‘ ì˜¤ë¥˜ ë°œìƒ:\n\n" + err.message);
      }
    });
